---
pagination:
  data: collections.agreements
  size: 1
  alias: agreement
permalink: "/{{ agreement.slug }}/index.html"
---

{% extends "left-right.njk" %}

{% from "thumbnail.njk" import thumbnail %}
{% from "agreements.njk" import agreementsTableLink %}
{% from "breadcrumbs.njk" import breadcrumbs %}

{% block left %}

  <div class="flex flex-col space-y-4 items-center">
    {{ breadcrumbs([
      { url: "https://kollektivavtal.github.io/", text: "Kollektivavtalsarkivet" },
      { url: "/", text: year }
    ]) }}

    <header>
      <h1 class="font-mono text-xl">
        {{ agreement.name }} {{ year }}
    </header>
  </div>
{% endblock %}

{% block right %}

  <table>
    <caption>
      Dokument
    </caption>

    <thead>
      <th></th>
      <th>Namn</th>
    </thead>

    <tbody>
      {% for document in agreement.documents %}
        <tr>
          <td>
            {{ thumbnail("", "/" ~ document.thumbnails.w64) }}
          </td>

          <td>
            <a href="/{{ document.filename }}">
              {{ document.basename }}
            </a>
          </td>
        </tr>
      {% endfor %}
    </tbody>

  </table>


{% endblock %}
