---
pagination:
  data: collections.agreements
  size: 1
  alias: agreement
permalink: "/{{ agreement.slug }}/index.html"
---

{% from "thumbnail.njk" import thumbnail %}
{% from "breadcrumbs.njk" import breadcrumbs %}

<!doctype html>
<html lang="sv">

  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/style.css" />
    <title>{{ agreement.name }} {{year}}</title>
  </head>

  <body>

    {% include "nav.html" %}

    {{ breadcrumbs([
      { url: "https://kollektivavtal.github.io/", text: "üè†" },
      { url: "/", text: year },
      { url: "/{{ agreement.slug }}", text: agreement.name }
    ]) }}

    <header>
      <h1>
        {{ agreement.name }} {{year}}
      </h1>
    </header>

    <table>

      <caption>
        Dokument
      </caption>

      <thead>
        <th></th>
        <th>Namn</th>
      </thead>

      <tbody>
        {% for document in agreement.documents %}
          <tr>
            <td>
              {{ thumbnail("", "/" ~ document.thumbnails.w64) }}
            </td>

            <td>
              <a href="/{{ document.filename }}">
                {{ document.basename }}
              </a>
            </td>
          </tr>
        {% endfor %}
      </tbody>

    </table>

  </body>
</html>

